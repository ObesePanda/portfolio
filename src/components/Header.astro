---
import HomeIcon from "../components/icons/Home.astro";
---

<header class="flex justify-between py-5 lg:w-[1224px] mx-auto">
  <nav class="flex flex-col sm:flex-row gap-x-10 text-black opacity-80">
    <a
      href="#home"
      class="flex flex-row items-center transition-all ease-in-out duration-300 hover:text-gray-500 p-2 relative"
    >
      <HomeIcon class="size-5" />
      <p class="text-[12px]">PandaCode</p>
    </a>
  </nav>
  <div class="text-black">
    <a
      href="#sobre-mi"
      class="transition-all ease-in-out duration-500 hover:text-gray-400 p-2 relative text-[12px]"
    >
      &lt; / Sobre Mi &gt;
    </a>
    <a
      href="#proyectos"
      class="transition-all ease-in-out duration-300 hover:text-gray-400 p-2 relative text-[12px]"
    >
      &lt; / Proyectos &gt;
    </a>
    <a
      href="#contacto"
      class="transition-all ease-in-out duration-300 hover:text-gray-400 p-2 relative text-[12px]"
    >
      &lt; / Contacto &gt;
    </a>
  </div>
</header>
