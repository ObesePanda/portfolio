---
import HomeIcon from "../components/icons/Home.astro";
---

<header class="flex justify-evenly py-5 lg:w-[1224px] mx-auto">
  <nav class="flex flex-col sm:flex-row gap-x-10 text-gray-200 opacity-80">
    <a
      href="#home"
      class="flex flex-row transition-all ease-in-out duration-300 hover:text-purple-500 p-2 relative"
    >
      <HomeIcon class="size-5" />
    </a>

    <a
      href="#sobre-mi"
      class="transition-all ease-in-out duration-500 hover:text-violet-400 p-2 relative text-[12px]"
    >
      &lt; / Sobre Mi &gt;
    </a>
    <a
      href="#proyectos"
      class="transition-all ease-in-out duration-300 hover:text-violet-400 p-2 relative text-[12px]"
    >
      &lt; / Proyectos &gt;
    </a>
    <a
      href="#contacto"
      class="transition-all ease-in-out duration-300 hover:text-violet-400 p-2 relative text-[12px]"
    >
      &lt; / Contacto &gt;
    </a>
  </nav>
</header>
