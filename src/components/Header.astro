---
import HomeIcon from "../components/icons/Home.astro";
---

<header class="flex justify-evenly py-5 lg:w-[1224px] mx-auto">
  <nav class="flex flex-col sm:flex-row gap-x-10 text-gray-200 opacity-80">
    <a
      href="#home"
      class="flex flex-row transition-all ease-in-out duration-300 hover:text-purple-500 p-2 relative"
    >
      <HomeIcon class="size-6" /> &lt; / Inicio &gt;
      <span
        class="absolute bottom-0 left-0 w-full h-0.5 bg-purple-500 scale-x-0 transition-transform duration-300 origin-left hover:scale-x-100"
      ></span>
    </a>

    <a
      href="#sobre-mi"
      class="transition-all ease-in-out duration-500 hover:text-violet-400 p-2 relative"
    >
      &lt; / Sobre Mi &gt;
      <span
        class="absolute bottom-0 left-0 w-full h-0.5 bg-violet-400 scale-x-0 transition-transform duration-300 origin-left hover:scale-x-100"
      ></span>
    </a>
    <a
      href="#proyectos"
      class="transition-all ease-in-out duration-300 hover:text-violet-400 p-2 relative"
    >
      &lt; / Proyectos &gt;
      <span
        class="absolute bottom-0 left-0 w-full h-0.5 bg-violet-400 scale-x-0 transition-transform duration-300 origin-left hover:scale-x-100"
      ></span>
    </a>
    <a
      href="#contacto"
      class="transition-all ease-in-out duration-300 hover:text-violet-400 p-2 relative"
    >
      &lt; / Contacto &gt;
      <span
        class="absolute bottom-0 left-0 w-full h-0.5 bg-violet-400 scale-x-0 transition-transform duration-300 origin-left hover:scale-x-100"
      ></span>
    </a>
  </nav>
</header>
