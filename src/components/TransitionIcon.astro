---
const { Icon, size = "size-10", title = "", extraClasses = "" } = Astro.props;
---

<div
  class={`group relative transition-all ease-in-out duration-300 ${extraClasses}`}
>
  <Icon class={size} />
  {
    title && (
      <div class="absolute bottom-0 left-0 right-0 top-4 text-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-sm font-bold text-gray-200 dark:text-gray-100 mt-10">
        {title}
      </div>
    )
  }
</div>
