---
const {
  Icon,
  size = "size-8",
  title = "",
  extraClasses = "",
  delay = "",
} = Astro.props;
---

<div
  class={`group relative opacity-0 translate-y-5 transition-all ease-in-out duration-700 delay-[${delay}] ${extraClasses}`}
  data-observe
>
  <Icon class={size} />
  {
    title && (
      <div class="absolute bottom-0 left-0 right-0 top-4 text-center opacity-0 group-hover:opacity-100 transition-opacity duration-500 text-sm font-bold text-black dark:text-gray-100 mt-10">
        {title}
      </div>
    )
  }
</div>
