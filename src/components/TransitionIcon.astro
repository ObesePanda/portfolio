---
const { Icon, size = "size-10", title = "", extraClasses = "" } = Astro.props;
---

<div
  class={"relative transition-all ease-in-out duration-300 hover:text-gray-500 ${extraClasses}"}
>
  <Icon class={size} />
  {
    title && (
      <div class="absolute bottom-0 left-0 right-0 text-center opacity-0 transition-opacity duration-300 group-hover:opacity-100 text-gray-500 dark:text-gray-400 mt-2">
        <Icon class={title} />
      </div>
    )
  }
</div>
