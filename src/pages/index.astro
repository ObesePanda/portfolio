---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Social from "../components/Social.astro";
import LinkedInIcon from "../components/icons/Linkedin.astro";
import GithubIcon from "../components/icons/Github.astro";
import IGIcon from "../components/icons/Instragram.astro";
import FBIcon from "../components/icons/Facebook.astro";
import DiscordIcon from "../components/icons/Discord.astro";
import XIcon from "../components/icons/X.astro";
import Experience from "../components/Experience.astro";
import AcercaMi from "../components/Acerca_mi.astro";
import Projects from "../components/Projects.astro";
import Email from "../components/icons/Email.astro";
import Download from "../components/icons/Download.astro";
import MoreProjects from "../components/MoreProjects.astro";
import Habilities from "../components/Habilities.astro";
---

<Layout
  title="Portfolio PandaCode - Desarrollador y programador web"
  description="Buscas realizar tu proyecto, contactarme. Desarrollador web"
>
  <section class="w-full mx-auto lg:w-[1024px] pt-10 pb-2 px-2">
    <div class="grid grid-cols-3 grid-rows-1 gap-2">
      <div class="bg-black/10 rounded-lg col-span-2 row-span-2 p-7">
        <h1
          class="bg-gradient-to-r from-gray-900 via-gray-600 to-gray-900 bg-clip-text text-transparent text-3xl lg:text-6xl font-extrabold flex flex-row gap-x-4"
        >
          Said Alfredo
        </h1>
        <p class="text-gray-500 opacity-100 pt-4 text-xl lg:text-2xl pb-3">
          Desarrollador Full Stack <div class="flex w-96"></div>
          <div class="flex items-center gap-2 mb-6">
            <span class="relative flex h-3 w-3">
              <span
                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-gray-900 opacity-75"
              ></span>
              <span
                class="relative inline-flex rounded-full h-3 w-3 bg-gray-600"
              ></span>
            </span>
            <Badge class="hover:scale-105 transition-transform"
              >Disponible para trabajar</Badge
            >
          </div>
        </p>
        <p class="text-gray-500 text-sm pt-4">
          Trabajo bajo el nombre de PandaCode. Me mantengo en constante <b
            >aprendizaje</b
          > para aumentar mi capacidad de resolver
          <b>problemas</b>.
        </p>
        <a href="#about" class="home__scroll-button button--flex"
          ><svg
            width="32px"
            height="32px"
            class="home__scroll-mouse"
            viewBox="0 0 247 390"
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            style="fill-rule: evenodd; clip-rule: evenodd; stroke-linecap: round; stroke-linejoin: round; stroke-miterlimit: 1.5;"
            ><path
              class="wheel"
              d="M123.359,79.775l0,72.843"
              style="fill: none; stroke: #111; stroke-width: 20px;"></path><path
              id="mouse"
              d="M236.717,123.359c0,-62.565 -50.794,-113.359 -113.358,-113.359c-62.565,0 -113.359,50.794 -113.359,113.359l0,143.237c0,62.565 50.794,113.359 113.359,113.359c62.564,0 113.358,-50.794 113.358,-113.359l0,-143.237Z"
              style="fill: none; stroke: #111; stroke-width: 20px;"></path></svg
          ><span class="text-black">Desplazarse hacia abajo</span><i
            class="uil uil-arrow-down home__scroll-arrow"></i></a
        >
        <div class="mt-6 w-90 flex justify-end">
          <Social href="">
            <p class="text-xs flex flex-row gap-x-2">
              Descargar CV <Download class="size-4" />
            </p>
          </Social>
        </div>
      </div>
      <div
        class="bg-black/10 row-span-2 col-start-3 rounded-lg p-5 mx-2 flex flex-col justify-center"
      >
        <div class="flex mx-auto my-auto profile">
          <img
            src="https://i.ibb.co/vY6sqVF/Imagen-de-Whats-App-2024-12-09-a-las-13-09-14-59a7b681.jpg"
            alt="Perfil Foto"
          />
        </div>
        <div class="flex justify-center">
          <div class="flex gap-2 text-sm mb-2">
            <Social href="">
              <LinkedInIcon class="size-4" />
            </Social>

            <Social href="">
              <GithubIcon class="size-4" alt="Github" />
            </Social>
          </div>
        </div>
      </div>

      <div
        class="bg-black/10 rounded-lg col-start-4 flex items-center justify-center p-4"
      >
        <img
          class="w-12 rounded-sm mr-2"
          src="https://w7.pngwing.com/pngs/56/96/png-transparent-flag-of-mexico-flag-of-mexico-united-states-mexican-war-of-independence-mexican-flag-s-free-flag-text-logo-thumbnail.png"
          alt=""
        />
        <h1
          class="bg-gradient-to-r from-gray-900 via-gray-600 to-gray-900 bg-clip-text text-transparent text-[30px] font-bold"
        >
          MÃ©xico
        </h1>
      </div>
      <div
        class="bg-black/20 col-start-4 rounded-lg flex items-center justify-center"
      >
        <img
          class="w-72 rounded-lg object-cover"
          src="https://media1.giphy.com/media/v1.Y2lkPTc5MGI3NjExd2w4aTQ0NGwzcmVzdjF0bmcxZ2x5djF6NWowanFkeno2cXJ2MnU3YiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/26BRNiATmtg6s1jC8/giphy.gif"
          alt=""
        />
      </div>
    </div>
  </section>

  <section class="w-full mx-auto lg:w-[1024px] pb-2 px-2 my-2">
    <Habilities />
  </section>

  <!--PROYECTOS-->

  <div class="flex flex-row w-full m-auto lg:w-[1024px] px-2 gap-2 pb-2">
    <section id="proyectos">
      <div class="bg-black/10 rounded-lg flex flex-col p-7">
        <p
          class="bg-gradient-to-r from-pink-200 to-pink-600 bg-clip-text text-transparent text-xl font-bold mb-5"
        >
          &lt; / Proyectos &gt;
        </p>

        <Projects />
      </div>
    </section>
  </div>
  <section
    class="grid grid-cols-1 grid-rows-1 w-full m-auto lg:w-[1024px] px-2 gap-2 pb-2"
  >
    <section id="sobre-mi">
      <div class="bg-black/10 rounded-lg pt-7 p-7">
        <p
          class="bg-gradient-to-r from-pink-200 to-pink-600 bg-clip-text text-transparent text-xl font-bold"
        >
          &lt; / Mas proyectos &gt;
        </p>
        <div class="pt-10 grid grid-cols-2 grid-rows-1 justify-center">
          <MoreProjects />
        </div>
      </div>
    </section>
  </section>

  <!--SOBRE MI-->
  <div
    class="grid grid-cols-1 grid-rows-1 sm:grid-cols-2 gap-2 w-full mx-auto lg:w-[1024px] px-2"
  >
    <section id="sobre-mi">
      <div class="bg-black/10 rounded-lg flex flex-col pt-7 p-7">
        <p
          class="bg-gradient-to-r from-pink-200 to-pink-600 bg-clip-text text-transparent text-xl font-bold"
        >
          &lt; / Sobre Mi &gt;
        </p>
        <div class="pt-10 flex justify-center">
          <AcercaMi />
        </div>
      </div>
    </section>
    <section id="sobre-mi">
      <div class="bg-black/10 rounded-lg flex flex-col p-7">
        <p
          class="bg-gradient-to-r from-pink-200 to-pink-600 bg-clip-text text-transparent text-xl font-bold"
        >
          &lt; / Experiencia Laboral &gt;
        </p>
        <div class="mt-7 p-6 flex justify-center">
          <Experience />
        </div>
      </div>
    </section>
  </div>

  <!--CONTACTO / REDES-->
  <section id="contacto" class="w-full mx-auto lg:w-[1024px] py-2 px-2 my-2">
    <div class="bg-black/20 rounded-lg p-7">
      <p
        class="bg-gradient-to-r from-pink-200 to-pink-600 bg-clip-text text-transparent text-xl font-bold"
      >
        &lt; / Contacto &gt;
      </p>

      <div class="flex justify-center w-full py-6 gap-3 text-xs mb-1">
        <Social href="">
          <IGIcon class="size-10" />
        </Social>
        <Social href="">
          <XIcon class="size-10" />
        </Social>
        <Social href="">
          <FBIcon class="size-10" />
        </Social>
        <Social href="">
          <DiscordIcon class="size-10" />
        </Social>
      </div>
      <div class="flex justify-center w-full gap-3 text-sm">
        <Social href="">
          <Email class="size-4" />
          nava.saidalfredo@gmail.com
        </Social>
      </div>
    </div>
  </section>
</Layout>

<style>
  .profile {
    width: 180px;
    height: 180px;
    overflow: hidden;
    animation: blob 5s ease-in-out infinite;
  }

  .profile img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes blob {
    0%,
    100% {
      border-radius: 62% 38% 88% 12% / 55% 71% 29% 45%;
    }
    25% {
      border-radius: 40% 60% 55% 45%;
    }
    50% {
      border-radius: 60% 40% 45% 55%;
    }
    75% {
      border-radius: 50% 50% 50% 50%;
    }
  }
</style>
