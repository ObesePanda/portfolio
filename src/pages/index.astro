            class="grid justify-items-center grid-cols-2 gap-8 text-gray-200 sm:gap-12 md:grid-cols-3 lg:grid-cols-5 dark:text-gray-400"
          >
            <TransitionIcon Icon={HTMLIcon} size="size-12" title="HTML" />
